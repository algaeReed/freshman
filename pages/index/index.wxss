/**index.wxss**/

.menu
{
  display: flex;
  flex:1;
}

.menu-item
{
  height:100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top:1rpx solid #eee;
  color:#999;
}

.menu-item:last-child
{
  border-bottom:1rpx solid #eee;
}

.menu-item-text
{
  margin-left: 20rpx;
  font-size: 36rpx;
  flex-direction: row;
}

.menu-item-icon
{
  margin-right: 20rpx;
  width:36rpx;
  height:36rpx;

}
