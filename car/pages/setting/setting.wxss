.user_info image:nth-child(1){
  margin-top: 10px;
  margin-left: 10px;
  border-radius: 3px;
  width: 40px;
  height: 40px;
  display: inline-block;
}

.user_name{
  display: inline-block;
}
.user_info .user_code{
  vertical-align: top;
  margin-top: 20px;
  margin-left: 54%;
  width: 20px;
  height: 20px;
  display: inline-block;
}
.user_info .user_more{
  vertical-align: top;
  margin-top: 20px;
  width: 20px;
  height: 20px; 
  display: inline-block;
}
.user_name{
  margin-left: 4px;
}

.user_name view:nth-child(1){
  font-size: 16px;
  color: #000000;
}
.user_name view:nth-child(2){
  font-size: 10px;
  color: #999999;
}
.user_info{
  border-bottom: 1px solid lightgray;
}


.address view{
  display: inline-block;
  margin-left: 10px;
  line-height: 48px;
  font-size: 13px;
  color: #333333;
} 
.address >.addr_more{
  margin-left: 68%;
  vertical-align: middle;
  width: 20px;
  height: 20px;
  display: inline-block;
}

.safe view{
  display: inline-block;
  margin-left: 10px;
  font-size: 13px;
  line-height: 40px;
}
.safe image{
  margin-left: 70%;
  margin-top: 12px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: top;

}



.other_info view{
  line-height: 50px;
  font-size: 13px;
  color: #333333;
  margin: 2px 10px; 
  border-bottom: 1px solid lightgray;
}





