/* pages/class/class.wxss */
.navigation{
  height: 50px;
  border-bottom: 1px solid lightgray;
 
}
.navigation view{
  display: inline-block;
  line-height: 50px;
  width: 15%;
  margin: 0 5%;


}

.selectedNav{
    border-bottom: 4px solid #26a69a;
    color: #26a69a;

}

.car{
  width: 90%;
  margin: 20px 5%;
}
.car image{
  width: 50%;
  height: 120px;
  display: inline-block;
}
.info{
  width: 45%;
  margin-left: 5%;
  display: inline-block;
  vertical-align: top;
}
.carName{
  color: #26a69a;

}

.carInfo{
  color: gainsboro;
  font-size: 14px;  
}

.star{
  font-size: 15px;
  color: orange;
}

.like{
  display: inline-block;
  width: 50%;
  font-size: 15px;
  color: gray;

}

.price{
  display: inline-block;
  width: 50%; 
  font-size: 15px;  
  color: #26a69a; 
}
.smallCar{
  width: 44%;
  display: inline-block;
  margin-left: 4.3%;
  margin-top: 10px;


}

.smallCar image{
  width: 100%;
  height: 120px;
}

.smallCar .carName {
  display: inline-block;
  font-size: 15px;
}

.smallCar .carInfo   {
  display: inline-block;
  
}
.smallCar .price{
  border-top: 1px dotted lightgray;
  width: 100%;
  font-size: 18px;
}

